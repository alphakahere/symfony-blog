{% extends "base.html.twig" %}
{% block title %}Accueil |
	{{parent()}}
{% endblock %}

{% block content %}
	<div class="row">
		{% for article in articles %}
			<div class="col-md-4 col-xl-4 mb-4">
				<div class="card">
					<img src="{{asset('uploads/' ~ article.picture)}}" class="card-img-top" alt="{{article.title}}" height="300px">
					<div class="card-body">
						<h5 class="card-title">{{article.title}}</h5>
						<p class="card-text">{{article.content}}</p>
						<a href="/show/{{article.id}}" class="btn btn-primary">Detail</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
